import math

def function(i): #creating function instance to be applied below
    return math.sqrt(i)
j=[] #my empty list

def apply_to_all(sqrt,listy):
    res=int(sqrt(listy[0])) #call the defined function on your list
    j.append(res) #add the results to your list
    del listy[0]    #delete from the list to avoid infinte recursion
    
    if len(listy)>0:
        apply_to_all(sqrt,listy) #apply_to_all called recurisvely
    return j

print(apply_to_all (function,[81,100,49,9,36]))
